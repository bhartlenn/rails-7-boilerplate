<header id="site_header" class="container">
    <h1 id="site_logo">Site Title</h1>

    <nav id="account_links">
        <% if user_signed_in? %>
            <%= button_to(
                    "Log Out",
                    destroy_user_session_path,
                    method: :delete
                ) %> |
            <%= current_user.email %>
        <% else %>
            <%= link_to "Sign In", new_user_session_path, class: "btn block" %>
            <span>|</span> 
            <%= link_to "Sign Up", new_user_registration_path, class: "btn block" %>
        <% end %>
    </nav>
</header>
